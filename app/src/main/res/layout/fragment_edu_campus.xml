<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.EduCampus">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:backgroundTint="@color/zxing_transparent"
            android:background="@color/zxing_transparent"
            android:orientation="horizontal">
            <Button
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="Get"
                android:drawablePadding="3dp"
                android:paddingTop="2dp"
                android:id="@+id/downloadRoutineId"
                android:textColor="#FB3C3C"
                android:textSize="18sp"
                android:background="@color/zxing_transparent"
                android:textColorHint="@color/lavenda"
                android:textAppearance="@color/lavenda"
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:drawableLeft="@drawable/baseline_cloud_download_24"
                android:layout_weight="0.5"
                android:layout_marginBottom="2dp"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="Note"
                android:drawablePadding="3dp"
                android:paddingTop="2dp"
                android:id="@+id/addRoutineId"
                android:textAlignment="textEnd"
                android:textColor="#F44336"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@color/zxing_transparent"
                android:drawableRight="@drawable/baseline_add_24"
                android:layout_weight="0.5"
                android:layout_marginBottom="2dp"/>

        </LinearLayout>

    </LinearLayout>


</FrameLayout>