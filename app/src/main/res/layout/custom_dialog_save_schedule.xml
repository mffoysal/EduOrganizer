                                android:layout_height="match_parent"
                                android:orientation="vertical">


                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    app:helperText="Required"
                                    app:counterEnabled="true"
                                    app:counterMaxLength="30"
                                    app:endIconMode="clear_text"
                                    app:helperTextTextColor="@color/lavenda"
                                    app:startIconDrawable="@drawable/ic_clock_time"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:hint="Enter a Routine Name">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="textPersonName"
                                        android:id="@+id/routineNameId"
                                        android:text=""
                                        android:maxLength="30">

                                    </com.google.android.material.textfield.TextInputEditText>

                                </com.google.android.material.textfield.TextInputLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:textAlignment="center"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_height="wrap_content">
                                    <com.google.android.material.button.MaterialButton
                                        android:id="@+id/btnRoutineSave"
                                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                        android:layout_width="wrap_content"
                                        android:layout_height="44dp"
                                        android:layout_gravity="bottom|end"
                                        android:layout_marginEnd="2dp"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginBottom="1dp"
                                        android:text="Proceed!"
                                        android:textAllCaps="false"
                                        android:textColor="@color/bg_screen1"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        android:theme="@style/Theme.MaterialComponents"
                                        app:cornerRadius="50dp"
                                        app:elevation="5dp"
                                        app:rippleColor="@color/bg_screen1"
                                        app:strokeColor="@color/bg_screen1" />

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

